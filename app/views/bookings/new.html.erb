<div class="container py-5">
  <div class="row">
    <div class="col-4 order-2 px-4">

      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class=text-muted>Your Order</span>
      </h4>

      <li class="py-2 list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0"><%= @tour.tour_name %></h6>
          <small class="text-muted">Brief description</small>
        </div>
        <p>$<span class="text-muted" id="tour-price-id"><%= @tour.price %></span></p>
      </li>

     <div>
        <li class="py-2 list-group-item d-flex justify-content-between bg-light">
          <div class="text-success">
            <h6 class="my-0">Flight ticket</h6>
            <small class="checkout-total-guest">number:
              <small id="number-ticket-id">0</small>
            </small>
          </div>
          <p>$<span class="text-success" id="total-ticket-price-id">0</span>
          </p>
        </li>
      </div>

      <li class="pt-2 list-group-item d-flex justify-content-between bg-light">
        <div class="text-success">
          <h6 class="my-0">Promo code</h6>
          <small>EXAMPLECODE</small>
        </div>
        <span class="text-success">-0</span>
      </li>
      <hr>
      <div class="card-footer d-flex justify-content-between py-3">
        <span><strong id="total-price">Total (USD)</strong></span>
        <span class="text-warning">
          $<strong id="total-booking-price"><%= @tour.price %></strong>
        </span>
      </div>

      <form class="card p-2">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Promo code">
          <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">
              Redeem
            </button>
          </div>
        </div>
      </form>

    </div>
    <div class="col-8 order-1 px-4">
      <h4 class="mb-3">Booking Tour</h4>
      <%= render "booking_form", booking: @booking %>
    </div>
  </div>
</div>
